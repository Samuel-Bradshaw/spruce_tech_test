{
	"name": "spruce-tech-test",
	"private": true,
	"version": "1.0.0",
	"workspaces": [
		"client"
	],
	"scripts": {
		"start": "npm run start -w client",
		"build": "npm run build -w client",
		"test": "npm run test -w client",
		"lint": "biome check .",
		"lint:fix": "biome check --write .",
		"format": "biome format --write .",
		"prepare": "husky"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.11",
		"husky": "^9.1.7",
		"lint-staged": "^15.5.1"
	},
	"lint-staged": {
		"*.{js,ts,jsx,tsx,json}": [
			"biome format --write --no-errors-on-unmatched",
			"biome lint --no-errors-on-unmatched"
		]
	}
}
